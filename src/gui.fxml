<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox id="mainBox" alignment="TOP_CENTER" prefHeight="517.0" prefWidth="450.0" style="-fx-background-color: #0A2135;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientController">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <TextField fx:id="ipTextField" prefHeight="27.0" prefWidth="219.0" promptText="Enter IP (localhost for local connection)" />
            <TextField fx:id="portTextField" promptText="Enter Port" />
            <Button id="connectButton" fx:id="connectButton" mnemonicParsing="false" styleClass="connectButton" text="Connect">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <center>
            <TextArea fx:id="mainTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@style.css" text="Messages will appear here" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TextArea>
         </center>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </BorderPane>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <TextField fx:id="sendTextField" layoutX="14.0" layoutY="4.0" prefHeight="27.0" prefWidth="350.0" promptText="Enter Message" HBox.hgrow="ALWAYS" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" layoutX="387.0" layoutY="-2.0" mnemonicParsing="false" styleClass="metro-button" stylesheets="@style.css" text="Send" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets top="5.0" />
   </padding>
</VBox>
